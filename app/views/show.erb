<div class="content-section-b">
    <div class="container">
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1  col-sm-12">
            <img src="<%= @robot.avatar %>" align="left" />
            <table class="table table-hover">
              <tr>
                <th scope="row">Name</th>
                <td class="name"><%=  @robot.name %></td>
              </tr>
              <tr>
                <th scope="row">City, State</th>
                <td><%=  @robot.city %>, <%=  @robot.state %></td>
              </tr>
              <tr>
                <th scope="row">Birthdate</th>
                <td><%=  @robot.birthdate %></td>
              </tr>
              <tr>
                <th scope="row">Date Hired</th>
                <td><%=  @robot.date_hired %></td>
              </tr>
              <tr>
                <th scope="row">Department</th>
                <td><%=  @robot.department %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
</div>
